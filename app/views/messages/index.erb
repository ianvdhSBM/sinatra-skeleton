<a href="/messages/new">Post a message... It's FREE (for now)!</a>

<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.author %></a></h3>
    <p>
      <%= message.content %>
    </p>
    <% if !message.url.nil? %>
      <p><a href="<%= message.url %>"><%= message.url %></a></p>
    <% end %>
  </div>
<% end %>
